<h1><%= @job.title %></h1>
<dl>
  <dt>Descrição da vaga:</dt>
  <dd><%= @job.description%></dd>
  <dt>Habilidades desejadas:</dt>
  <dd><%= @job.skills%></dd>
  <dt>Faixa salarial:</dt>
  <dd><%= @job.salary%></dd>
  <dt>Nivel da vaga:</dt>
  <dd><%= @job.level%></dd>
  <dt>Data limite:</dt>
  <dd><%= l @job.limit_date%></dd>
  <dt>Local:</dt>
  <dd><%= @job.local%></dd>
</dl>

<% if user_signed_in? %>
  <% if @job.opened? %>
    <%= link_to  "Candidatar-se", new_job_opportunity_path(@job) %>
  <% end %>

<% elsif headhunter_signed_in? %>
  <%= link_to  "Candidatos", candidates_job_path(@job) %>
  <%= link_to  "Encerrar vaga", end_job_job_path(@job) %>
<% end %>

<%= link_to  "Voltar", jobs_path %>